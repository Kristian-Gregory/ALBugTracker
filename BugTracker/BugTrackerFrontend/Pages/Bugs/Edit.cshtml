@page
@model BugTrackerFrontend.Pages.Bugs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bug.BugId" />
            <div class="form-group">
                <label asp-for="Bug.Title" class="control-label"></label>
                <input asp-for="Bug.Title" class="form-control" />
                <span asp-validation-for="Bug.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Description" class="control-label"></label>
                <input asp-for="Bug.Description" class="form-control" />
                <span asp-validation-for="Bug.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.State" class="control-label"></label>

                <select asp-for="Bug.State" class="form-control" 
                    asp-items="Html.GetEnumSelectList<BugTrackerModel.BugState>()">
                </select>
                <span asp-validation-for="Bug.State" class="text-danger"></span>
            </div>

            @{
                var x = 2;
            }
            <div class="form-group">
                <label asp-for="SelectedAssigneePersonId" class="control-label"></label>
                @Html.DropDownListFor(x => Model.SelectedAssigneePersonId, new SelectList(Model.AllAssignees, "PersonId", "Name"), htmlAttributes: new { @class = "form-control", id = "Assignee"})
                <span asp-validation-for="SelectedAssigneePersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.ReportedDate" class="control-label"></label>
                <input asp-for="Bug.ReportedDate" class="form-control" />
                <span asp-validation-for="Bug.ReportedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./../Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
